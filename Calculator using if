#include<stdio.h>
int main()
{
    float num1;
    float num2;
    char op;
    printf("Enter first number:");
    scanf("%f",&num1);
    printf("Enter second number:");
    scanf("%f",&num2);
    printf("Enter operator:");
    scanf("%s",&op);
    if(op =='+'){
        printf("%.2f",num1 + num2);
    }
    else if(op=='-'){
        printf("%.2f",num1-num2);
    }
    else if(op=='*'){
        printf("%.2f",num1*num2);
    }
    else if(op=='/'){
        printf("%.2f",num1/num2);
    }
    else{
        printf("Invalid operator");
    }
    return 0;
}
